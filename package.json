{
  "name": "investment-tracker",
  "version": "1.0.0",
  "description": "投資紀錄系統",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "npm run minify && npm run optimize",
    "minify": "terser js/**/*.js -o dist/app.min.js",
    "optimize": "npm run build:css",
    "build:css": "cat css/**/*.css > dist/styles.min.css",
    "test": "jest",
    "lint": "eslint js/**/*.js",
    "deploy": "gh-pages -d .",
    "start": "npm run dev"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "live-server": "^1.2.2",
    "terser": "^5.24.0",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "gh-pages": "^6.1.0"
  },
  "keywords": ["investment", "portfolio", "tracker", "finance"],
  "author": "Your Name",
  "license": "MIT"
} 