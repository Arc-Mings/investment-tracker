{
  "name": "investment-tracker",
  "version": "1.0.0",
  "description": "投資紀錄系統 - 阿嬤級友善版",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "test": "jest",
    "lint": "eslint js/**/*.js"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^5.1.0",
    "lodash-es": "^4.17.21",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^38.1.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "gh-pages": "^6.1.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "terser": "^5.24.0"
  },
  "keywords": [
    "investment",
    "portfolio",
    "tracker",
    "finance"
  ],
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.investment-tracker.app",
    "productName": "投資紀錄表",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!backend/node_modules",
      "!tests",
      "!deploy",
      "!*.md",
      "!.gitignore"
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": "投資理財"
    }
  }
}
